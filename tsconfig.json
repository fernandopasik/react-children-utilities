{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "es2021"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "rootDirs": ["src"],
    "sourceMap": true,
    "strict": true,
    "target": "es2019"
  },
  "exclude": ["**/*.flow", "/lib", "/react-children-utilities.*"],
  "include": [".**/**/*", "**/*"]
}
